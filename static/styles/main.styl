@import '../bower_components/normalize.styl/normalize.styl'
@import 'fonts'
@import 'guideline'
@import 'base'
@import 'helpers'
@import 'spacers'

.header
	height 100px
	border-bottom 2px solid $red

	&__logo
		font-family 'Ubuntu', sans-serif
		font-size 48px
		line-height 100px
		margin-left 20px
		color $red
		

.main
	width 650px
	margin-left auto
	margin-right auto
	margin-top 45px
	margin-bottom 45px

.present
	position relative
	height 250px
	text-align center

	&__photo
		width 250px
		height 100%
		background $grey
		float left
		z-index 0

	&__desc
		width 390px
		height 100%
		float right
		text-align left

	&__icon
		padding-top 60px
		padding-bottom 47px

	&__fileupload
		position absolute
		bottom 36px
		left 24px

.link-page
	&__link
		line-height 48px

.donate-form
	#cvv
		width 83px

.donate-progressbar
	height 50px
	border-bottom 2px solid $green
	background $grey
	z-index 0
	position relative

	&__value
		position absolute
		left 0
		display inline-block
		height 100%
		line-height 50px
		text-align right
		padding-right 15px
		width 85px
		background $green
		color #fff
		z-index 2
		opacity 0.85


	&__goal
		position absolute
		right 0
		display inline-block
		line-height 50px
		color $darkgrey
		padding-right 30px
		background url('/static/images/finish-icon.svg') no-repeat 105px 30px
		z-index 1