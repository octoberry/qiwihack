@import '../bower_components/normalize.styl/normalize.styl'
@import 'fonts'
@import 'guideline'
@import 'base'
@import 'spacers'

.header
	height 100px
	border-bottom 2px solid $red

	&__logo
		font-family 'Ubuntu', sans-serif
		font-size 48px
		line-height 100px
		margin-left 20px
		color $red

.main
	width 650px
	margin-left auto
	margin-right auto
	margin-top 45px
	margin-bottom 45px

.present
	position relative
	height 250px
	text-align center

	&__photo
		width 250px
		height 100%
		background $grey
		float left

	&__desc
		width 390px
		height 246px
		float right

	&__icon
		padding-top 60px
		padding-bottom 47px

	&__fileupload
		margin 0 auto