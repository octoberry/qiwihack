placeholder()
	&::-webkit-input-placeholder /* WebKit browsers */
		font-style italic
	&:-moz-placeholder /* Mozilla Firefox 4 to 18 */
		font-style italic
		opacity 1
	&::-moz-placeholder /* Mozilla Firefox 19+ */
		font-style italic
		opacity 1
	&:-ms-input-placeholder /* Internet Explorer 10+ */
		font-style italic


h1,h2,h3,h4,h5,h6
	padding 0
	margin 0

.title
	&-h2
		font-size 36px
		font-weight 300
a
	color $red
	text-decoration none

	&:hover
		text-decoration underline

select
	background $grey
	border none
	height 38px

textarea
	border 0
	background $grey
	width 100%
	height 100%
	box-sizing border-box
	padding 14px 10px
	placeholder()

		&:focus
			outline-color $red

button
	font-size 16px
	padding 12px 59px
	border 1px solid $red
	background $red
	color #ffffff

	&:hover
		color #ffffff
		background $redHover

	&:active
		color #ffffff
		background $redActive

.button
	font-size 16px
	padding 12px 59px
	border 1px solid $red
	background $red
	color #ffffff

	&__full-color
		padding 12px 59px
		background $red
		color #ffffff

	&:hover
		color #ffffff
		background $redHover

	&:active
		color #ffffff
		background $redActive

	&:disabled
		border-color $redDisabled
		background $redDisabled

input[type=text]
	background $grey
	border none
	padding 10px
	placeholder()

		&:focus
			outline-color $red

.input
	&--full
		width 96%
		padding 20px 2% !important

.form-item
	&__label
		display inline-block
		width 130px

	&--submit
		border-top 2px solid $red
		padding-top 10px
		text-align right

	&__error
		display none
		text-align left
		font-size 12px
		padding 6px 10px
		background #eb2129
		color #fff

		&--show
			display block

.fileupload
	height 34px
	width 200px
	position relative
	overflow hidden

	input[type=file]
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		opacity 0
		cursor pointer