@import 'guideline'

h1,h2,h3,h4,h5,h6
	padding 0
	margin 0

.title
	&-h2
		font-size 36px
		font-weight lighter

textarea
	border 0
	background $grey
	width 100%
	height 100%
	padding-top

button
	font-size 14px
	padding 8px 15px
	border 1px solid $red
	background #fff
	color $red
	font-weight bold

	&:hover
		color #fff
		background $red

.form-item
	&__label
		display inline-block
		width 130px

.fileupload
	height 34px
	width 200px
	position relative
	overflow hidden

	input[type=file]
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		transform scale(20)
		opacity 0
		cursor pointer