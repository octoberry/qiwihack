@import 'guideline'
@import 'mixins'

h1,h2,h3,h4,h5,h6
	padding 0
	margin 0

.title
	&-h2
		font-size 36px
		font-weight lighter

textarea
	border 0
	background $grey
	width 100%
	height 100%
	box-sizing border-box
	padding 14px 10px
	placeholder()

button
	button()

	&:hover
		color #fff
		background $red

.button
	button()

	&__full-color
		padding 15px 55px
		background $red
		color #fff

		&:hover
			border 1px solid $red
			color $red
			background #fff

input[type=text]
	background $grey
	border none
	padding 10px
	placeholder()

	&:focus
		outline-color $red

.form-item
	&__label
		display inline-block
		width 130px

	&--submit
		border-top 2px solid $red
		padding-top 10px
		text-align right

.fileupload
	height 34px
	width 200px
	position relative
	overflow hidden

	input[type=file]
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		transform scale(20)
		opacity 0
		cursor pointer