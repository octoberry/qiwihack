placeholder()
	&::-webkit-input-placeholder /* WebKit browsers */
		font-style italic
	&:-moz-placeholder /* Mozilla Firefox 4 to 18 */
		font-style italic
		opacity 1
	&::-moz-placeholder /* Mozilla Firefox 19+ */
		font-style italic
		opacity 1
	&:-ms-input-placeholder /* Internet Explorer 10+ */
		font-style italic

button()
	font-size 16px
	padding 12px 59px
	border 1px solid $red
	background $red
	color #fff