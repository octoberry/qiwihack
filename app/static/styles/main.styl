@import 'fonts'
@import 'normalize'
@import 'mixins'

.spacer
.spacer--big
.spacer--middle
.spacer--small
	display block

.spacer--small
	height 10px

.spacer--middle
	height 14px

.spacer--big
	height 34px

.float-left
	float left

.float-right
	float right

.split-line
	height 2px
	border none
	background #d8d8d8
	margin 0
	padding 0

.clearfix:after
	content "."
	visibility hidden
	display block
	height 0
	clear both

.input-item
	&__label
		display inline-block
		width 100px
		font-family 'Open Sans', sans-serif
		font-size 14px
		color #000
		line-height 142%

	&__hint
		font-family 'Open Sans', sans-serif
		font-size 14px
		color #000
		line-height 142%
		padding-left 7px

	&__text
		border 2px solid #F6F6F6
		background #F6F6F6
		height 45px
		width 370px
		padding-left 10px
		placeholder()
		inputhover()

		&--full-width
			width 100%

	&__select
		height 45px
		border 2px solid #F6F6F6
		background F6F6F6
		placeholder()
		inputhover()

	&__textarea
		height 100%
		width 100%
		padding 12px 10px
		border 2px solid #F6F6F6
		background rgba(246,246,246,0)
		box-sizing border-box
		placeholder()
		inputhover()

	&--error
		.input-item
			&__text
				border 2px solid #FD0511
			&__textarea
				border 2px solid #FD0511
			&__box
				height 100%
				box-sizing border-box
				border 2px solid #FD0511
			&__select
				border 2px solid #FD0511

.form-errors
	display none
	width 650px
	line-height 24px
	margin-bottom 10px

	&--show
		display block

	&__item
		color #FD0511
		text-decoration none
		border-bottom 1px dashed #FD0511
		cursor pointer
		margin-right 10px

		&:hover
			border-bottom none

a
	color #3e9ce3
	text-decoration underline

	&:hover
		text-decoration none

.title-h1
.title-h2
.title-h3
	font-family 'PT Sans', sans-serif;
	color #000
	margin 0
	padding 0

.title-h2
	font-size 28px
	font-weight bold
	line-height 128%

.button
	font-family 'Open Sans', sans-serif;
	font-size 14px
	font-weight bold
	color #fff
	background #7ed321
	padding 0 14px
	border none
	border-radius 6px
	font-size 14px
	line-height 36px

	&:hover
		background #B8E986
	&:active
		background #417505
	&:disabled
		background #A4A4A4

	&--red
		background #FD0511
		&:hover
			background #ff3056
		&:active
			background #d9040f
		&:disabled
			background #A4A4A4

	&--big
		line-height 45px
		padding 0 60px


.overlay
	display block
	position absolute
	height 100%
	width 100%
	opacity 0.5
	background #ccc
	top 0
	left 0
	display none

	&__spinner
		position absolute
		width 128px
		height 128px
		margin auto
		left 0
		right 0
		top 0
		bottom 0

	&--show
		display block


html
body
	height 100%
	background rgba(235,235,235,1)

.layout
	height 100%
	width 980px
	margin 0 auto

	.page-wrap
		background #fff
		min-height 100%
		margin-bottom -200px

			&:after
				content " "
				display block

	.container
		padding-left 60px
		padding-right 60px

	.header
		height 80px

		&__logo
			height 33px
			width 169px
			margin-top 24px
			overflow hidden

	.content
		position relative
		height 100%
		border-top 1px solid rgba(215,215,215,1)

	.footer
		height 200px
		background rgba(38,38,38,1)
		font-size 14px
		color #fff

		a
			&:hover
				text-decoration underline

		&:after
			height 200px

		&__left-side
			line-height 18px

			a
				font-family 'Open Sans', sans-serif;

		&__right-side
			line-height 28px

		.container
			padding-top 69px

.creation-page
	padding-bottom 100px

	&__gift

		.gift
			&__photo
				position relative
				height 250px
				width 250px
				margin-right 10px
				background #F6F6F6
				float left
				background-position center center
				background-repeat no-repeat
				background-size cover

				&_icon
					position absolute
					margin auto
					top 60px
					left 0
					right 0

				&_fileupload-button
					display inline-block
					text-align center
					position absolute
					width 250px
					height 36px
					margin auto
					left 0
					right 0
					bottom 36px

					input[type='file']
						opacity 0
						position absolute
						left 0
						line-height 36px
						width 315px
						cursor pointer
						margin-left -87px

			&__desc
				height 250px
				margin-left 260px
				background #F6F6F6
				overflow hidden

					&:focus
						outline none

	//TODO @chuve переделать на stylus
	.how-to-use > * {
		display: inline-block;
	}
	.how-to-use .step {
		text-align: center;
		font-size: 13px;
	}
	.how-to-use .step span {
		display: block;
		margin-top: 12px;
	}
	.how-to-use .step-compose span {
		margin-top: 5px;
	}
	.how-to-use .step-price span {
		margin-top: 6px;
	}
	.how-to-use .next-step {
		width: 84px;
		text-align: center;
	}
	.how-to-use .next-step img {
		margin-bottom: 54px;
	}

	.button--white {
		background: #f0f0f0;
	}
	.button--white:hover {
		background: #dddddd;
	}
	.button--white:active {
		background: #bbbbbb;
	}
	.button--white:disabled {
		background: #aaaaaa;
	}

	.button--box {
		line-height: 20px;
		padding: 20px;
		margin-right: 10px;
		width: 207px;
	}

	.button--box:last-child {
		margin-right: 0;
	}

	.button--img {
		height: 60px;
	}

	.input-csv {
		width: 55px;
	}

.donate-page
	padding-bottom 100px

	.gift__desc_text
		padding 12px 10px

	.donate-progressbar
		height 50px
		border-bottom 2px solid #4A90E2
		background #F6F6F6
		z-index 0
		position relative

		&__value
			display inline-block
			height 100%
			width 85px
			padding-right 15px
			position absolute
			left 0
			line-height 50px
			text-align right
			background  #4A90E2
			color #fff
			z-index 2
			opacity 0.85


		&__goal
			display inline-block
			position absolute
			padding-right 30px
			right 0
			line-height 50px
			color #9b9b9b
			z-index 1

			&-icon
				fill #4A90E2
				position absolute
				bottom 0
				right 5

	.security-icon
		vertical-align middle